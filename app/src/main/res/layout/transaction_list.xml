<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:layout_editor_absoluteY="10dp">


    <TextView

        android:id="@+id/transaction_list_Pix_TextView"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00C1AF"
        android:gravity="center"
        android:text="Pix"
        android:visibility="invisible"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/textViewDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:text="@string/Status"
        android:textColor="#202021"
        app:layout_constraintEnd_toStartOf="@+id/transaction_list_Pix_TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:paddingStart="20dp"
        android:text="@string/Name1"
        android:textColor="#828282"
        app:layout_constraintEnd_toStartOf="@+id/textViewDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatus" />


    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginEnd="2dp"
        android:gravity="end"
        android:paddingEnd="20dp"
        android:text="@string/Date"
        android:textColor="#828282"
        app:layout_constraintBottom_toTopOf="@+id/textViewValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewName" />

    <TextView
        android:id="@+id/textViewValue"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:paddingStart="20dp"
        android:text="@string/Value"
        android:textColor="#202021"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

</androidx.constraintlayout.widget.ConstraintLayout>