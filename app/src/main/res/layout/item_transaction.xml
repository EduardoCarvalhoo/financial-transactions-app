<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/item_transaction_pix_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/dark_cyan"
        android:gravity="center"
        android:text="@string/item_transaction_pix_text"
        android:paddingHorizontal="8dp"
        android:textColor="@color/light_grey"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_transaction_status_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_magenta_blue"
        app:layout_constraintEnd_toStartOf="@+id/item_transaction_pix_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TransferÃªncia realizada" />

    <TextView
        android:id="@+id/item_transaction_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toStartOf="@+id/item_trasaction_date_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_transaction_status_text_view"
        tools:text="Laura sacura" />

    <TextView
        android:id="@+id/item_trasaction_date_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/dark_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_transaction_status_text_view"
        tools:text="29/11" />

    <TextView
        android:id="@+id/item_transaction_value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_magenta_blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_transaction_name_text_view"
        tools:text="1234"/>

</androidx.constraintlayout.widget.ConstraintLayout>